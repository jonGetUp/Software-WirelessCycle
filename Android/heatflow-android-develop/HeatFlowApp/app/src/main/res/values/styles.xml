<resources>

    <!-- Activity themes -->
    <style name="Theme.Base" parent="Theme.AppCompat.NoActionBar"/>

    <style name="Theme.Sample" parent="Theme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sample">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/DarkActionBar</item>

        <!-- Number Picker
        <item name="android:numberPickerStyle">@style/CustomNPStyle</item> -->


    </style>

    <!-- Action's bar specification -->
    <style name="DarkActionBar" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/default_margin</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/DarkGray</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="CardViewStyleTiny" parent="CardViewStyle">
        <item name="contentPadding">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="CardViewStyleVeryTiny" parent="CardViewStyleTiny">
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="CustomNPStyle">
        <item name="android:textSize">55dp</item>
    </style>

</resources>
